<h1>Editing book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <p>本のタイトル</p>
  <%= f.text_field :title %>
  <p>感想</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update book' %>
<% end %>
<div class="link">
  <%= link_to "Show", book_path(@book.id), method: :get %>
  <p>|</p>
  <a href="/books">Back</a>
</div>
