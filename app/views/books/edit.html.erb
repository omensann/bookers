<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-box">
  <div class="error-text">
    <%= @book.errors.count %>
    errors prohibited this book from being saved:
  </div>
    <div class="error-message">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
</div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div >
  <p class="sub-title">本のタイトル</p>
  <%= f.text_field :title %>
  <p class="sub-title">感想</p>
  <%= f.text_area :body %>
  <input name="commit" class="submit-button" type="submit" value="Update Book">
<% end %>
  </div>
<div class="show-back-link">
  <%= link_to "Show", book_path(@book.id), method: :get %>
  <p>|</p>
  <a href="/books">Back</a>
</div>
